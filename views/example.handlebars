<div class="container">
  <div class="card">
  <div class="card-body">
   
    <h3>{{this.house.address}}</h3>
   
  </div>
</div>
  <div class="row">
    <div class="col-10">
      <form id="cms" action="/houses/{{id}}/people" method="POST">
        <div class="form-group">
          <label for="name">Name:</label>
          <input placeholder="Full Name" type="text" class="form-control" id="name" name="name">
          <br />
          <label for="age">Age:</label>
          <input placeholder="Age" class="form-control" id="age" name="age"></input>
          <br />
          <label for="pets">Pets:</label>
          <input type="checkbox" name="pets" value=true > I have pet<br>
          <br />
          <label for="disability">Disability or Special Condition:</label>
          <input placeholder="Disabilities or Special Condition" type="text" class="form-control" id="disability" name="disability" >
          <br />
          <label for="picture">User Picture (optional):</label>
          <form method="POST" action="getdata.php" enctype="multipart/form-data">
          <input type="file" name="userimage">
          <input type="submit" name="submit_image" value="Upload">
          </form>
          <button type="submit" class="btn btn-success submit">Submit</button>
        </div>
			</form>
    </div>

    {{#each house.People}}
     <div class="card mt-4">
      <div class="card-body">
        <h5 class="card-title">Personal Information</h5>
        <p>
          <strong>ID</strong>: {{this.id}}</p>
        <p>
          <strong>Name</strong>: {{this.name}}</p>
        <p>
          <strong>Age:</strong> {{this.age}}</p>
        <p>
          <strong>Disability:</strong> {{this.disability}}</p>
        </div>
      </div>
    {{/each}}
       <a href="/">‚Üê Back To Home</a>
    </div>
  </div>
</div>

